<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    tools:context="com.example.cristhian.prototipo2.FragmentoMensaje"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bus_marker"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/txt_placa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxx"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txt_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxx"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txt_conductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxx"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txt_ruta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxx"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txt_tiempo_estimado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxx"
        android:gravity="center_horizontal"
        />

</LinearLayout>
