<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:id="@+id/editTextUsuario1"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_action_user"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:id="@+id/editTextUsuario2"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_action_edit"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo Electronico"
                android:id="@+id/editTextUsuario3"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_action_mail"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:id="@+id/editTextUsuario4"
                android:layout_marginTop="10dp"
                android:inputType="textVisiblePassword"
                android:drawableLeft="@drawable/ic_action_key"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                android:id="@+id/editTextUsuario5"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_action_phone_start"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:layout_gravity="center"
                android:onClick="Enviar"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>